---
import PageHeader from "../../components/PageHeader.astro";
import Layout from "../../layouts/Layout.astro";
import { listPluginCategories } from "../../utils";

const tabs = [
  {
    title: "全部",
    link: "/cn/plugins",
    active: true,
  },
  {
    title: "商业插件",
    link: "/cn/plugins-commercial",
  },
];

const data = await listPluginCategories();
const description = "一切皆插件，使用插件扩展 NocoBase 的能力。欢迎分享你的插件，无论它是开源的还是商业的。";
---

<Layout title="插件" description={description}>
  <PageHeader title="插件" tabs={tabs}>
    <span slot="description">
        一切皆插件，使用插件扩展 NocoBase 的能力。欢迎分享你的插件，无论它是开源的还是商业的。<br/>
        请联系我们沟通详细信息。
    </span>
    <a href="/cn/contact" class="btn btn-outline-primary"
      >分享插件<i class="uil uil-angle-right-b"></i></a
    >
  </PageHeader>

  <!-- Section Start -->
  <section class="section">
    <div class="container">
      {
        data
          .filter((group) => group.plugins.length > 0)
          .map((group) => (
            <>
              <h4 class="mt-2 pb-1 text-muted">{group.title_cn || group.title}</h4>
              <div class="row pb-4">
                {group.plugins.map((plugin: any) => (
                  <div class="col-lg-4 col-md-6 col-12 pt-0 pb-4">
                    <a title={plugin.title_cn || plugin.title} style="color: inherit;" href={`/cn/docs/handbook/${plugin.name}`} class="card rounded shadow border-0 plugin-card">
                      <div class="card-body">
                        <div class="mt-2">
                          <h6 class="card-title">{plugin.title_cn || plugin.title}</h6>
                          <p class="text-muted mb-2">{plugin.description_cn || plugin.description}</p>
                          {plugin.isCommercial ? (
                            <span class="badge bg-soft-warning plugin-type">
                              Commercial
                            </span>
                          ) : (
                            <span class="badge bg-soft-primary plugin-type">
                              Open source
                            </span>
                          )}
                          {plugin.isComingSoon && (
                            <span class="badge bg-soft-info plugin-type">
                              Coming soon
                            </span>
                          )}
                        </div>
                      </div>
                    </a>
                  </div>
                ))}
              </div>
            </>
          ))
      }
    </div><!--end container-->
  </section><!--end section-->
</Layout><!--end section-->
