---
import PageHeader from "../../../components/PageHeader.astro";
import Layout from "../../../layouts/Layout.astro";
import { getPage } from "../../../utils";

const page = await getPage("ai-employee", "ru");

const title = page.title_ru || page.title;
const description = page.description_ru || page.description;
const keywords = page.keywords_ru || page.keywords;
---

<Layout title={title} description={description} keywords={keywords}>
  <PageHeader title={title}>
    <span slot="description" set:html={description}></span>
  </PageHeader>
  <!-- Start Highlights -->
  <section class="section">
    <div class="container">
      <div class="row align-items-top ">
        <div class="col-lg-5 col-md-5">
          <div class="section-title">
            <h5 class="mb-4">AI-сотрудники работают <span class="text-primary">вместе</span> с вами</h5>
            <p class="text-muted">В NocoBase AI-сотрудники — это не чат-боты и не изолированные агенты. Это интеллектуальные коллеги, бесшовно интегрированные в вашу бизнес-систему, способные понимать бизнес-контекст и напрямую выполнять задачи.</p>
          </div>
        </div><!--end col-->
        <div class="col-lg-7">
          <div class="card rounded border-0 shadow ms-lg-5">
            <video controls class="rounded shadow">
              <source src="https://static-docs.nocobase.com/AE-3.1-EN.mp4" type="video/mp4">
            </video>
          </div>
        </div><!--end col-->
      </div><!--end row-->
      
    </div><!--end container-->
  </section><!--end section-->
  <!-- Highlights End -->
</Layout>

