---
import PageHeader from "../../components/PageHeader.astro";
import Layout from "../../layouts/Layout.astro";
import { getPage, listPluginCategories } from "../../utils";

const tabs = [
  {
    title: "Все плагины",
    link: "/ru/plugins",
    active: true,
  },
  {
    title: "Коммерческие плагины",
    link: "/ru/plugins-commercial",
  },
  {
    title: "Пакеты плагинов",
    link: "/ru/plugins-bundles",
  }
];

const data = await listPluginCategories();
const page = await getPage("plugins");
const title = page.title_ru || page.title;
const description = page.description_ru || page.description;
const keywords = page.keywords_ru || page.keywords;

const allPlugins = data.flatMap((group: any) => group.plugins);

const newlyPlugins = allPlugins.filter((p: any) => !!p.newly && !p.internal);
const comingPlugins = allPlugins.filter((p: any) => !!p.coming && !p.internal);

data.forEach((group: any) => {
  group.plugins = group.plugins.filter((p: any) => !p.newly && !p.coming && !p.internal && !p.user_specific);
});

const normalGroups = data.filter((group) => group.plugins.length > 0);

const finalGroups = [];

// a) newly launched
if (newlyPlugins.length > 0) {
  finalGroups.push({
    id: 'newly-launched',
    title: 'Новинки',
    plugins: newlyPlugins,
  });
}

// b) coming soon
if (comingPlugins.length > 0) {
  finalGroups.push({
    id: 'coming-soon',
    title: 'Скоро',
    plugins: comingPlugins,
  });
}

// c) normal
finalGroups.push(...normalGroups);

---
<Layout title={title} description={description} keywords={keywords}>
  <PageHeader title={title} tabs={tabs}>
    <span slot="description" set:html={description}></span>
    <a href="/ru/contact" class="btn btn-outline-primary">
      Купить
      <i class="uil uil-angle-right-b"></i>
    </a>
  </PageHeader>

  <!-- Section Start -->
  <section class="section">
    <div class="container">
      {
        finalGroups
            .filter((group) => group.plugins.length > 0)
            .map((group) => (
                <>
                  <h4 class="mt-2 pb-1 text-muted">{group.title_ru || group.title}</h4>
                  <div class="row pb-4">
                    {group.plugins.map((plugin: any) => (
                        <div class="col-lg-4 col-md-6 col-12 pt-0 pb-4">
                          <div
                              title={plugin.name_ru || plugin.name }
                              style="color: inherit;"
                              class="card rounded shadow border-0 plugin-card"
                          >
                            <div class="card-body">
                              <div class="mt-2 plugin-box">
                                <h6 class="card-title mb-1">{plugin.name_ru || plugin.name}</h6>
                                <div class="plugin-developer text-muted mb-3">
                                  Разработчик <span>{plugin.developer || 'NocoBase'}</span>
                                </div>
                                <p class="text-muted mb-2 plugin-overview">
                                  {plugin.description_ru || plugin.description}
                                  {plugin.docs &&
                                      <a href={plugin.docs} target="_blank" style="font-size: 14px;">Подробнее</a>
                                  }
                                </p>
                                <div class="plugin-footer">
                                  {plugin.coming ? (
                                      <span class="badge bg-soft-info plugin-type">
                                Скоро
                              </span>
                                  ) : plugin.commercial ? (
                                      <>
                                        <h6 class="text-primary mb-0">
                                          <span class="text-muted" style="font-weight: normal;font-style: italic;font-size: 12px;">Пожизненное <br />использование,<br /> обновление на 1 год</span><br/>
                                          <a href="/ru/plugins-bundles"> {plugin.points_1_year_rub || plugin.points_1_year} <i class="uil uil-moon-eclipse me-1"></i></a>
                                          <span class="text-muted">/</span>
                                          <span class="text-muted">
                                    {plugin.price_1_year_rub ? plugin.price_1_year_rub.toLocaleString('ru-RU') : '?'} ₽
                                  </span>
                                        </h6>
                                        <h6 class="text-muted mb-0" style="margin-left: auto;font-weight: normal;">
                                          <span class="text-muted" style="font-weight: normal;font-style: italic;font-size: 12px;">Пожизненное<br /> использование <br /> и обновление</span><br/>
                                          <a class="text-muted" href="/ru/plugins-bundles"> {plugin.point} <i class="uil uil-moon-eclipse me-1"></i></a>
                                          <span class="text-muted">/</span>
                                          <span class="text-muted">
                                    {plugin.price_rub ? plugin.price_rub.toLocaleString('ru-RU') : '?'} ₽
                                  </span>
                                        </h6>
                                      </>
                                  ) : (
                                      <span class="badge bg-soft-primary plugin-type">
                                Бесплатно
                              </span>
                                  )}
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                    ))}
                  </div>
                </>
            ))
        }
      </div><!--end container-->
    </section><!--end section-->
  </Layout><!--end section-->
