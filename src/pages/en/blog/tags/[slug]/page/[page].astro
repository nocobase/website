---
import FormattedDate from "../../../../../../components/FormattedDate.astro";
import PageHeader from "../../../../../../components/PageHeader.astro";
import Pagination from "../../../../../../components/Pagination.astro";
import Layout from "../../../../../../layouts/Layout.astro";
import { getArticleTag, listArticles, url } from "../../../../../../utils";
import BlogSidebar from "../../../../../../components/BlogSidebar.astro";

const { slug, page } = Astro.params as { slug?: string; page?: number; };
const { data, meta } = await listArticles({ page, tagSlug: slug });
const tag = await getArticleTag(slug);
const tagpath = '/en/blog/tags/' + slug;
const basepath = '/en/blog';
const title = tag.title;
const description = tag.description;
const keywords = tag.keywords;
const tabs = [
  {
    title: "Home",
    link: "/en/",
  },
  {
    title: "Blog",
    link: basepath,
  },
  {
    title: title,
    active: true,
  },
];

const socialLinks = [
  {
    name: "github",
    icon: "fab fa-github",
    url: "https://github.com/nocobase"
  },
  {
    name: "twitter", 
    icon: "fab fa-twitter",
    url: "https://twitter.com/nocobase"
  },
  {
    name: "discord",
    icon: "fab fa-discord", 
    url: "https://discord.gg/nocobase"
  }
];

const shareLinks = [
  {
    name: "twitter",
    icon: "fab fa-twitter",
    url: `https://twitter.com/intent/tweet?text=${encodeURIComponent(description)}&url=${encodeURIComponent('https://www.nocobase.com' + tagpath)}`
  },
  {
    name: "linkedin",
    icon: "fab fa-linkedin",
    url: `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent('https://www.nocobase.com' + tagpath)}`
  },
  {
    name: "facebook",
    icon: "fab fa-facebook",
    url: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent('https://www.nocobase.com' + tagpath)}`
  }
];
---

<Layout title={title} description={description} keywords={keywords}>
  <PageHeader showRSS title={title} description={description} breadcrumb={tabs}>
  </PageHeader>
  <section class="section">
    <div class="container">
      <div class="row">
        <main class="col-md-8">
          <section>
            <ul class="articles">
              {
                data.map((post) => (
                  <li>
                    <a href={`${basepath}/${post.slug}`}>
                      <img
                        style="object-fit: cover;"
                        width={720}
                        height={360}
                        src={url(post.cover.url)}
                        alt={post.title}
                      />
                      <h4 class="title">{post.title}</h4>
                      <p class="date">
                        <FormattedDate date={post.publishedAt || post.createdAt} />
                      </p>
                    </a>
                  </li>
                ))
              }
            </ul>
          </section>
          <Pagination basepath={tagpath} currentPage={page} pageSize={meta.pageSize} total={meta.count} totalPages={meta.totalPage} />
        </main>

        <BlogSidebar 
          basepath={basepath}
          description={description}
          recentPosts={data}
          socialLinks={socialLinks}
          lang="en"
        />
      </div>

      <div class="mt-4">
        <div class="d-flex align-items-center">
          <span class="me-2">Follow Us:</span>
          <ul class="list-unstyled social-icon d-flex gap-2 mb-0">
            {socialLinks.map(link => (
              <li>
                <a
                  href={link.url}
                  class="btn btn-sm btn-light rounded-circle"
                  target="_blank"
                  rel="noopener"
                >
                  <i class={link.icon}></i>
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>
