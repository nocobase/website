---
import ShapeHeader from "./ShapeHeader.astro";

interface TabProps {
  title: string;
  link?: string;
  active?: boolean;
}

interface Props {
  title: string;
  showRSS?: boolean;
  showTimeline?: boolean;
  description?: any;
  tabs?: TabProps[];
  breadcrumb?: TabProps[];
  className?: string;
}

const { showRSS, showTimeline = false, className, title, description, tabs, breadcrumb } = Astro.props;
const items = tabs || breadcrumb || [];
---

<!-- Hero Start -->
<section class={"bg-half-170 bg-light d-table w-100 " + className}>
  <div class="container">
    <div class="row mt-5 justify-content-center">
      <div class="col-lg-12 text-center">
        <div class="pages-heading">
          <h1 class="title mb-0">
            {title}
            <slot name="title" />
            {
              showRSS && (
                <a
                  href={
                    Astro.url.pathname.startsWith("/cn/")
                      ? "/cn/rss.xml"
                      : "/en/rss.xml"
                  }
                >
                  <svg
                    style="zoom: 1.5; margin-top: -3px;"
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-rss"
                    viewBox="0 0 16 16"
                  >
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M5.5 12a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm-3-8.5a1 1 0 0 1 1-1c5.523 0 10 4.477 10 10a1 1 0 1 1-2 0 8 8 0 0 0-8-8 1 1 0 0 1-1-1zm0 4a1 1 0 0 1 1-1 6 6 0 0 1 6 6 1 1 0 1 1-2 0 4 4 0 0 0-4-4 1 1 0 0 1-1-1z" />
                  </svg>
                </a>
              )
            }
            {
              showTimeline && (
                <a
                  href={
                    Astro.url.pathname.includes("/blog/timeline")
                      ? Astro.url.pathname.startsWith("/cn/")
                        ? "/cn/blog/tags/release-notes"
                        : Astro.url.pathname.startsWith("/ja/")
                          ? "/ja/blog/tags/release-notes"
                          : "/en/blog/tags/release-notes"
                      : Astro.url.pathname.startsWith("/cn/")
                        ? "/cn/blog/timeline"
                        : Astro.url.pathname.startsWith("/ja/")
                          ? "/ja/blog/timeline"
                          : "/en/blog/timeline"
                  }
                >
                  <svg
                    style="zoom: 1.5; margin-top: -3px;"
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-arrow-repeat"
                    viewBox="0 0 16 16"
                  >
                    <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41zm-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9z"/>
                    <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5.002 5.002 0 0 0 8 3zM3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9H3.1z"/>
                  </svg>
                </a>
              )
            }
          </h1>
          <p class="para-desc mx-auto text-muted">
            {description}
            <slot name="description" />
          </p>
          <slot />
        </div>
      </div><!--end col-->
    </div><!--end row-->
    {
      items?.length > 0 && (
        <div class="position-breadcrumb">
          <nav aria-label="breadcrumb" class="d-inline-block">
            <ul class={(tabs?.length ? "plugins-cat " : "") + "breadcrumb rounded shadow mb-0 px-4 py-2"}>
              {items.map((tab) => (
                <li
                  class={
                    tab.active ? "breadcrumb-item active" : "breadcrumb-item"
                  }
                >
                  <a href={tab.link}>{tab.title}</a>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      )
    }
  </div>
</section><!--end section-->
<!-- Hero End -->

<ShapeHeader />
